<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".project.Register"
    android:background="#EDE7f8">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:layout_margin="30dp"
        android:src="@drawable/food_app"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="260dp"
        android:text="Welcome Onboard!"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/RegPhone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="310dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/background_edt"
        android:hint="Your Phone"
        android:paddingStart="20dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="379dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/RegName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="380dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/background_edt"
        android:hint="Your Name"
        android:paddingStart="20dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="379dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/RegEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="450dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/background_edt"
        android:hint="Your Email"
        android:paddingStart="20dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="379dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/RegPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="520dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/background_edt"
        android:hint="Your Password"
        android:paddingStart="20dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="379dp" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="610dp"
        android:text="Regsiter" />

    <TextView
        android:id="@+id/alreay_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/btn_register"
        android:text="already registerd?"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_alreadyLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_toRightOf="@+id/alreay_reg"
        android:text="Log in"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/btn_register"
        android:textColor="@color/purple_200"
        android:textSize="20dp"
        android:textStyle="bold" />

</RelativeLayout>